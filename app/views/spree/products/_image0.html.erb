<% if defined?(image) && image %>
  <%= link_to image_tag(main_app.url_for(image.url(:product)), :itemprop => "image"), main_app.url_for(image.url(:large)), :class => 'fancybox zoom-image' %>
  <br />
  <%= link_to main_app.url_for(image.url(:large)), :class => 'fancybox zoom-image' %>
<% else %>
  <% if @product.images.empty? and @product.has_variants? and @product.variant_images.empty? %>
    <%= product_image(@product, :itemprop => "large") %>
  <% else %>
    <% if @product.images.empty? %>
      <% @p = @product.variants.first %>
    <% else %>
      <% @p = @product %>
    <% end %>
    <%= link_to product_image(@product, :itemprop => "image", :class => 'zoom-click', data: { zoom: main_app.url_for(@p.images.first.url(Spree::ProductZoom::Config.default_image_style)) }), main_app.url_for(@p.images.first.url(Spree::ProductZoom::Config.default_image_style)), :class => 'zoom-image large-image zoom-click', :rel => 'gallery' %>
    <br/>
    <!-- PROBLEM: still in div#main-image, will be overwritten by javascript -->
    <%= link_to image_tag('zoom.gif', alt: 'zoom image', class: 'click-to-zoom'), main_app.url_for(@p.images.first.url(Spree::ProductZoom::Config.default_image_style)), :class => 'zoom-image click-to-zoom', :rel => 'gallery' %>
    <div id="gallery" style="display:none;">
      <% if @product.has_variants? %>
        <% first_variant_id = @product.variants.first.id %>
        <% @product.variants.each do |variant| %>
          <% clazz = 'fancybox productid-' + variant.id.to_s %>
          <% if first_variant_id == variant.id %>
            <% clazz = 'fancybox productid-' + variant.id.to_s %>
          <% else %>
            <% clazz = 'productid-' + variant.id.to_s %>
          <% end %>
          <% variant.images.each do |i| %>
            <% next if @product.images.include?(i) %>
            <%= link_to image_tag(main_app.url_for(i.url(:product))), main_app.url_for(i.url(Spree::ProductZoom::Config.default_image_style)), :class => clazz, :rel => 'gallery' %>
          <% end %>
        <% end %>
      <% end %>
      <% @product.images.each do |img| %>
        <% clazz = 'master productid-' + @p.id.to_s + ' fancybox' %>
        <%= link_to image_tag(main_app.url_for(img.url(:product))), main_app.url_for(img.url(Spree::ProductZoom::Config.default_image_style)), :class => clazz, :rel => 'gallery' %>
      <% end %>
    </div>
  <% end %>
<% end %>
